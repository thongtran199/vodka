<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VodkaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
</head>
<body>

    <div class="container-scroller">
    <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
            <a class="navbar-brand brand-logo"><img src="~/images/Paycompute2.gif" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
@*            <partial name="_LoginPartial" />*@
        </div>
    </nav>
    <div class="container-fluid page-body-wrapper">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">

                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-users fa-lg text-primary" style="margin-right:0.7em"></i>
                        <span class="menu-title">Product</span>
                        <i class="menu-arrow text-primary"></i>
                    </a>
                    <ul class="dropdown-menu nav flex-column sub-menu">
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Create"> New Product</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index"> All Products</a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-pound-sign fa-lg text-primary" style="margin-right:0.7em"></i>
                        <span class="menu-title">Category</span>
                        <i class="menu-arrow text-primary"></i>
                    </a>
                    <ul class="dropdown-menu nav flex-column sub-menu">
                        <li class="nav-item"><a class="nav-link" asp-controller="Category" asp-action="Create"> New Category</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Category" asp-action="Index">All Categories</a></li>
                    </ul>
                </li>

            </ul>
        </nav>
        <div class="main-panel">
            @* <partial name="_CookieConsentPartial" />*@
            <div class="content-wrapper">
                @RenderBody()
            </div>
            <footer class="footer">
                <p> &copy; @DateTime.UtcNow.Year - VThongTran_CategoryBranch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            </footer>
        </div>
    </div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
