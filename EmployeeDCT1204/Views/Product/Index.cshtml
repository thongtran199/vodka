@model IEnumerable<ProductIndexViewModel>

<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">All Employee</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 table-responsive-md">
                <a class="btn btn-xs btn-outline-success float-md-right mb-3" asp-action="Create"> New Product</a>
                <table class="table table-striped table-info ">
                    <thead>
                        <th>Product Id</th>
                        <th>Name</th>
                        <th>Desciption</th>
                        <th>Price</th>
                        <th>Image Link</th>
                        <th class="text-warning">Actions</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>@item.Descript</td>
                                <td>@item.Price</td>
                                <td>@item.ImageSource</td>
                                <td>
                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.ProductId">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.ProductId">
                                        <i class="fas fa-bars"></i> Detail
                                    </a>
                                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.ProductId">
                                        <i class="far fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>